@* Index file *@

@model FriendFace.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    @* Icons for heart and comment *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>
<div class="container text-center mb-3">
    <h3>Welcome back @Model.User.FirstName!</h3>
    <div class="d-flex justify-content-center">
        <div class="btn-group btn-group-sm me-3" role="feed" aria-label="Toggle between feed and own content">
            <!-- Add ml-3 for left margin -->
            <input type="radio" class="btn-check" name="feed" id="following-feed" onclick="toggleFeed('Feed')" autocomplete="off" checked>
            <label class="btn btn-outline-primary" for="following-feed">Feed</label>
            <input type="radio" class="btn-check" name="feed" id="profile-feed" onclick="toggleFeed('Profile')" autocomplete="off">
            <label class="btn btn-outline-primary" for="profile-feed">My Published Posts</label>
        </div>

        <button id="post-btn" type="button" class="btn btn-outline-primary btn-sm " onclick="createPost()">
            <i class="fas fa-plus"></i> Create Post
        </button>
    </div>
</div>

<div id="postCreateContainer" style="display: none">
    <partial name="_PostCreatePartial"/>
</div>

@* Posts in feed *@
<div id="feed">
    <partial name="_PostFeedPartial" model="Model" hidden="false"/>
</div>
<div id="profile" style="display: none">
    <partial name="_PostProfilePartial" model="Model" hidden="true"/>
</div>
<script src="js/Home/createPost.js"></script>
<script src="js/Home/toggleFeed.js"></script>
</body>
</html>