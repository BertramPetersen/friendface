@* _PostProfilePartial file *@

@model FriendFace.ViewModels.HomeIndexViewModel

@foreach (var post in Model.PostsByLoggedInUser)
{
    <div id="postContainer-@post.Id" class="col-md-6 offset-md-3 mb-3">
        <div class="card">
            <div class="card-header" style="background-color: #f8f8f8">
                <div class="d-flex justify-content-between align-items-center">
                    @* Name, Username *@
                    <span>
                        <span style="font-weight: bold;">@post.User.FirstName @Html.Raw(" ") @post.User.LastName</span>
                        <span style="font-size: 80%;" class="text-muted">@Html.Raw("@")@post.User.UserName</span>
                    </span>

                    @* Menu for post *@
                    @if (post.User.Id == Model.User.Id)
                    {
                        <partial name="_PostMenuPartial" model="post"/>
                    }
                </div>
            </div>
            <div class="card-body">
                @* The content of the post *@
                <form id="editContent-form">
                    <input type="hidden" id="editContent-@post.Id" name="PostId" value="@post.Id" readonly>
                    <input class="form-control-plaintext shadow-none" type="text" id="editContent-editField-@post.Id" name="Content" value="@post.Content" readonly>

                    <div id="editContent-charcounter-container-@post.Id" class="form-text d-none">
                        <p><span id="editContent-chars-@post.Id">0</span>/@Model.PostCharLimit chars</p>
                    </div>

                    <button class="btn btn-success btn-sm mb-4 me-2 d-none" id="editContent-button-save-@post.Id" type="submit" disabled>Save</button>
                    <button id="editContent-button-cancel-@post.Id" class="btn btn-secondary btn-sm mb-4 d-none" type="button" disabled>Cancel</button>
                </form>

                @* Date and icons *@
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">@post.Time.ToString("HH:mm dd/MM/yy")</small>

                    <span style="font-size: 80%;" class="text-muted">
                        @{
                            bool isLiked = post.Likes.Any(like => like.UserId == Model.User.Id);
                            string heartIcon = GetHeartIcon(isLiked);
                            string heartIconColor = isLiked ? "red" : "inherit";
                        }
                        <a class="@heartIcon text-decoration-none cursor-pointer" style="color: @heartIconColor" data-post-id="@post.Id" href="/Home/ToggleLikePost?postId=@post.Id"></a>
                        <span id="likeCount-@post.Id">@post.Likes.Count</span>
                        <i class="far fa-comment"></i> @post.Comments.Count
                    </span>
                </div>

                @* Comments *@
                <partial name="_CommentPartial" model="post.Comments"/>
            </div>
        </div>
    </div>
}

@functions {
    string GetHeartIcon(bool isLiked) => isLiked ? "fas fa-heart" : "far fa-heart";
}