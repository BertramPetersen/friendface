@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FriendFace.ViewModels.VerifyTwoFactorViewModel

@{
    ViewData["Title"] = "Verify Two-Factor Authentication";;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<div>
  <h2>@ViewData["Title"]</h2>
  
  <form asp-action="VerifyTwoFactor" method="post">
      <input type="hidden" asp-for="UserId" />
  
      <div class="form-group">
          <label asp-for="Token"></label>
          <input asp-for="Token" class="form-control" />
          <span asp-validation-for="Token" class="text-danger"></span>
      </div>
  
      <button type="submit" class="btn btn-primary">Verify</button>
  </form>
</div>
</body>
</html>